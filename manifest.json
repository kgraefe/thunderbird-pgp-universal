{

  "manifest_version": 2,
  "name": "PGP Universal",
  "description": "Fixes encrypted e-mail attachment names from PGP Universal servers",
  "author": "Konrad Gr√§fe <kgraefe@paktolos.net>",
  "version": "1.4",

  "applications": {
    "gecko": {
      "id": "tb-pgp-universal@paktolos.net",
      "strict_min_version": "128.0",
      "strict_max_version": "130.*"
    }
  },

  "permissions": [
    "messagesRead",
    "downloads",
    "downloads.open"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "experiment_apis": {
    "Attachments": {
      "schema": "api/Attachments/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["Attachments"]],
        "script": "api/Attachments/implementation.js"
      }
    }
  }
}
